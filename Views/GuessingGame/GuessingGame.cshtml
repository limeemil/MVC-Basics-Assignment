
@{
    ViewData["Title"] = "Guessing game";
}

<div id="Guess">
    <h1>Guess the number</h1>

    <form asp-controller="GuessingGame" asp-action="GuessingGame" method="post">
        <label>Guess a whole number between 1 and 100</label><br />
        <input type="number" name="guess" />
        <input type="submit" value="Guess" /><br />
    </form>
    <p>@(ViewBag.Guess)</p>
</div>
